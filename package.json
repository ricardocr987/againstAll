{
  "name": "againstall",
  "version": "1.0.0",
  "description": "Pr√°ctica Sockets, Streaming de Eventos, Colas y modularidad de Sistemas Distribuidos",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.js",
  "type": "module",
  "scripts": {
    "start": "npm i && npm run build",
    "build": "npm run clean:ts && npm run build:ts",
    "build:ts": "tsc -p ./tsconfig.json",

    "docker:up": "docker-compose up",

    "start:PC1": "node ./dist/src/AA_Weather.js && npm run:kafka",
    "start:kafka": "./scripts/start-kafka.sh && ./scripts/create-topic.sh",
    "start:PC2": "node ./dist/src/AA_Engine.js && node ./dist/src/AA_Registry.js",
    "start:player": "node ./dist/src/AA_Player.js",
    "start:npc": "node ./dist/src/AA_NPC.js",

    "clean:ts": "rm -rf ./dist",
    "clean:all": "rm -rf ./node_modules && rm -rf ./dist && rm -rf package-lock.json",
    
    "dev": "ts-node-dev --respawn --transpile ./src/server.ts",
    "prod": "tsc && node ./dist/server.js"
  },
  "devDependencies": {
    "@types/node": "^18.8.4",
    "@types/prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@types/express": "^4.17.14",
    "@types/socket.io": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.5.2",
    "socket.io-client": "^4.5.2",
    "ts-node-dev": "^2.0.0"
  }
}
